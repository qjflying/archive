body, dl, dt, dd, ul, ol, li, h1, h2, h3, h4, h5, h6, pre, code, form, fieldset, legend, input, button, textarea, p, th, td, blockquote {
    padding: 0;
    margin: 0;
}

table {
    border-collapse: collapse;
    border-spacing: 0;
}

fieldset, img, abbr, acronym {
    border: 0;
}

ol, ul {
    list-style: none;
}

caption, th {
    text-align: left;
}

h1, h2, h3, h4, h5, h6, code, em, strong, th, i {
    font-weight: 400;
    font-size: 100%;
}

input, textarea, select, button, option {
    font-family: inherit;
    font-size: inherit;
    font-weight: inherit;
}

:focus {
    outline: 0;
}

input[type=number] {
    -moz-appearance:textfield;
}
input[type=number]::-webkit-inner-spin-button,
input[type=number]::-webkit-outer-spin-button {
    -webkit-appearance: none;
    margin: 0;
}

article, aside, footer, header, nav, section {
    display: block
}